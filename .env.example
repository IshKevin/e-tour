# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/etour_db

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@etour.rw

# Gmail OAuth2 Configuration (Alternative to SMTP)
# GMAIL_CLIENT_ID=your-gmail-client-id
# GMAIL_CLIENT_SECRET=your-gmail-client-secret
# GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
# GMAIL_USER=your-gmail@gmail.com

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Gateway Configuration (for production)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...

# Simple Heartbeat Configuration
SIMPLE_HEARTBEAT_ENABLED=true
HEARTBEAT_INTERVAL=30000
SELF_PING_ENABLED=true
SELF_PING_URL=https://your-app.herokuapp.com/ping
LOG_HEARTBEAT=true

# Redis Configuration (for caching, sessions)
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info